<%- include('partials/header', { title: 'Edit Post', user: user }) %>

<div class="container mt-5">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <div class="card">
        <div class="card-header">
          <h1>Edit Comment</h1>
        </div>
        <div class="card-body">
          <form
            action="/posts/<%= post._id %>/<%= comment._id %>/edit?_method=PUT"
            method="POST"
          >
            <div class="form-group">
              <label for="comment">Comment</label>
              <textarea
                class="form-control"
                name="comment"
                id="comment"
                rows="5"
                required
              >
<%= comment.content %></textarea
              >
              <input
                type="hidden"
                name="commentId"
                value="<%= comment._id %>"
              />
            </div>
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-save"></i> Update comment
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
