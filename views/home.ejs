<%- include('partials/header.ejs', {title: 'Home', user: user}) %>

<!-- hero section -->
<div
  class="hero-section text-center d-flex align-items-center justify-content-center vh-100 text-white"
  style="
    background-image: url(https://cdn.pixabay.com/photo/2024/03/08/09/55/cat-8620369_1280.png);
    background-size: cover;
    background-position: center;
    position: relative;
  "
>
  <div
    style="
      background-color: rgba(0, 0, 0, 0.4);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    "
  ></div>
  <div class="container" style="position: relative">
    <h1 class="display-3 font-weight-bold mb-4">Welcome to Mengyao blog!</h1>
    <p class="lead mb-5">A place to share your thoughts and ideas.</p>
    <%if (user) {%>
    <p class="mb-4">
      Hello,<span class="username font-weight-bold"><%= user.username %></span>!
      Welcome back!
    </p>
    <a href="/user/profile" class="btn btn-primary btn-lg mr-2"
      >Go to your Profile</a
    >
    <%}else{%>
    <a href="/auth/login" class="btn btn-primary btn-lg mr-2">
      <i class="fas fa-sign-in-alt"></i>Login</a
    >
    <a href="/auth/register" class="btn btn-secondary btn-lg"
      ><i class="fas fa-user-plus"></i>Register</a
    >
    <%}%>
  </div>
</div>
<%- include('partials/footer.ejs') %>
